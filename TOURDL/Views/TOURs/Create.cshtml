@model TOURDL.Models.TOUR

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/CSS/AdminAdd.css" />

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Admin</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index","NHANVIENs")">Quản lý nhân viên</a></li>
        <li class="breadcrumb-item">Thêm nhân viên</li>
    </ol>
</nav>
<div class="contains">
    <h2>Thêm tour mới</h2>

