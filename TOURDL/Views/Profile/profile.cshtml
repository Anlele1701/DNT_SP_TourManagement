@model TOURDL.Models.KHACHHANG

@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/CusLayout.cshtml";
}
<link rel="stylesheet" href="~/CSS/Profile.css"/>
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @{
                                        if (Session["GioiTinh"] == null)
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/gender-neutral-user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else if (Session["GioiTinh"].ToString() == "Nam")
                                        {
                                            <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else if (Session["GioiTinh"].ToString() == "Nữ")
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/blond-long-hair-business-lady.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/gender-neutral-user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                    }
                                </div>
                                <h6 class="f-w-600" style="color:black">@Html.DisplayFor(model => model.HoTen_KH)</h6>
                                <p>Điểm: @Html.DisplayFor(model => model.Diem)</p>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <p class="m-b-20 p-b-5 b-b-default f-w-600">Thông tin cá nhân</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400" style="text-decoration-line:none;color:black!important;text-overflow:ellipsis">@Html.DisplayFor(model => model.Mail_KH)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.SDT_KH)</h6>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Giới tính</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.GioiTinh_KH)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">CCCD</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.CCCD)</h6>
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>