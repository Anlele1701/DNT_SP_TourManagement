@model TOURDL.Models.KHACHHANG

@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/CusLayout.cshtml";
}
<link rel="stylesheet" href="~/CSS/Profile.css" />


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @{
                                        if (Session["GioiTinh"] == null)
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/gender-neutral-user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else if (Session["GioiTinh"].ToString() == "Nam")
                                        {
                                            <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else if (Session["GioiTinh"].ToString() == "Nữ")
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/blond-long-hair-business-lady.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                        else
                                        {
                                            <img src="https://img.icons8.com/bubbles/50/gender-neutral-user.png" class="img-radius" alt="User-Profile-Image">
                                        }
                                    }
                                </div>
                                <h6 class="f-w-600" style="color:black">@Html.DisplayFor(model => model.HoTen_KH)</h6>
                                <p>Điểm: @Html.DisplayFor(model => model.Diem)</p>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <p class="m-b-20 p-b-5 b-b-default f-w-600">Thông tin cá nhân</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"><i class="fa-regular fa-envelope" style="padding-right:5px"></i>Email</p>
                                        <p>
                                            @Html.DisplayFor(model => model.Mail_KH)
                                        </p>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"><i class="fa-solid fa-mobile-screen" style="padding-right:5px"></i>Số điện thoại</p>
                                        <h6 class="text-muted f-w-400">+84 | @Html.DisplayFor(model => model.SDT_KH)</h6>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"><i class="fa-solid fa-venus-mars" style="padding-right:5px"></i>Giới tính</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.GioiTinh_KH)</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"><i class="fa-regular fa-address-card" style="padding-right:5px"></i>CCCD</p>
                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.CCCD)</h6>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-6 history">
                                        <a href="@Url.Action("TourHistory", "HOADONs", new { id = Session["IDUser"] })">Lịch sử tour đã đặt</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>