@model TOURDL.Models.HOADON

@{
    ViewBag.Title = "HoaDon";
    Layout = null;
}
<link href="~/CSS/HoaDon.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="invoice">
    <div class="invoice-header">
        <h1>Hoá đơn</h1>
    </div>
    <form class="invoice-form">
        <label for="company-name" id="company-name-label">Tên công ty:</label>
        <input type="text" id="company-name" placeholder="Travel Dalats" readonly>
        <hr>
        <label for="customer-name">Tên khách hàng:</label>
        <input type="text" id="customer-name" placeholder="@Session["UsernameSS"]" readonly>
        <label for="Date">Date:</label>
        <input type="text" id="date" placeholder="@Html.DisplayFor(model=>model.NgayDat)" readonly>
        <label for="item-number">Số điện thoại:</label>
        <input type="text" id="mobile-number" placeholder="@Session["SDT"]" readonly>
        <label for="item-name">ID Tour:</label>
        <input type="text" id="item-name" placeholder="@Html.DisplayFor(model=>model.ID_SPTour)" readonly>
        <label for="item-hoadon">ID Hoá Đơn:</label>
        <input type="number" id="quantity" placeholder="@Html.DisplayFor(model=>model.ID_HoaDon)" readonly>
        <label for="TienTour">Tổng Tiền Tour:</label>
        <input type="number" id="rate" placeholder="@Html.DisplayFor(model=>model.TongTienTour)" readonly>
        <label for="SoLuong">Số lượng ghế:</label>
        <input type="number" id="rate" placeholder="@Session["SoLuong"]" readonly>
        <label for="TinhTrang">Tình trạng:</label>
        <input type="number" id="rate" placeholder="@Html.DisplayFor(model=>model.TinhTrang)" readonly>
    </form>
    <div class="invoice-footer">
        <div class="box">
            Delivery Date
        </div>
        <div class="box">
            Customer Signature
        </div>
    </div>
    <div class="print-button">
        <button onclick="window.print()"><i class="fas fa-print"></i> Print Invoice</button>
    </div>
</div>