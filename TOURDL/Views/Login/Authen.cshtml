@model TOURDL.Models.NHANVIEN

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authen</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @using (Html.BeginForm("Authen", "Login", FormMethod.Post))
    {
        @Html.LabelFor(m => m.Mail_NV)
        @Html.TextBoxFor(m => m.Mail_NV)

        @Html.LabelFor(m => m.MatKhau)
        @Html.TextBoxFor(m => m.MatKhau)

        @Html.ValidationMessageFor(m => m.MatKhau)
        @Html.AntiForgeryToken()
        <input class="btn btn-primary" type="submit" value="login" />}
</body>
</html>
