@model TOURDL.Models.KHACHHANG

@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}
<link rel="stylesheet" href="~/CSS/Login.css" />


@using (Html.BeginForm())
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-1 g-5 py-5">
            <div class="col">
                <div class="card">
                    <h2>Đăng Nhập</h2>
                    <form>
                        <div>
                            <div class="form-group">
                                <div class="div-input">
                                    <label>Email</label>
                                    @Html.EditorFor(model => model.Mail_KH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Mail_KH, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-group">
                                <div class="div-input">
                                    <label>Mật khẩu</label>
                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="hover-a">
                            <a style="text-decoration:none;color:white" href="@Url.Action("Signup","Login")">Bạn chưa có tài khoản ? Đăng ký ngay</a>
                        </div>
                        @Html.ValidationMessageFor(m => m.MatKhau)
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="button-login" style="text-align:center">
                                <input type="submit" value="Đăng nhập" class="btn btn-default" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="text-align:center">
                                <label style="color:red">@ViewBag.Notification</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}



