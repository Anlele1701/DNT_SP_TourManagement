            <div class="col-md-2"></div>
        </div>
        <div class="ngoaitour" style="text-align:center;">
            <a style="color: white;text-decoration:none" href="@Url.Action("DatTour", "DatTour", new {id=item.ID_SPTour})">Đặt Tour</a>
        </div>
    </div>}


        <script>
            var slideIndex = 1;
            showDivs(slideIndex);

            function plusDivs(n) {
                showDivs(slideIndex += n);
            }

            function showDivs(n) {
                var i;
                var x = document.getElementsByClassName("mySlides");
                if (n > x.length) { slideIndex = 1 }
                if (n < 1) { slideIndex = x.length }
                for (i = 0; i < x.length; i++) {
                    x[i].style.display = "none";
                }
                x[slideIndex - 1].style.display = "block";
            }
        </script>

